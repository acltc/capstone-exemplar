<h1>Create a new meeting</h1>
<%= form_tag "/meetings", method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :address %>
    <%= text_field_tag :address %>
  </div>
  <div>
    <%= label_tag :start_time %>
    <%= datetime_local_field_tag :start_time %>
  </div>
  <div>
    <%= label_tag :end_time %>
    <%= datetime_local_field_tag :end_time %>
  </div>
  <div>
    <%= label_tag :members %>
    <%= select_tag :members, options_for_select(@members.collect{ |u| [u.email, u.id] }), multiple: true, include_blank: true %>
  </div>
  <div>
    <%= submit_tag %>
    <%= link_to "Cancel", "/meetings" %>
  </div>
<% end %>