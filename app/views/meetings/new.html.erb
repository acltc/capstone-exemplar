<div class="container">
  
<h1>Create a new meeting</h1>
<%= form_tag "/meetings", method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @meeting.name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :address %>
    <%= text_field_tag :address, @meeting.address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :start_time %>
    <%= datetime_local_field_tag :start_time, @meeting.start_time || DateTime.now.strftime("%Y-%m-%dT%H:%M"), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :end_time %>
    <%= datetime_local_field_tag :end_time, @meeting.end_time || (DateTime.now + 1.hour).strftime("%Y-%m-%dT%H:%M"), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :users %>
    <div>
      <%= collection_check_boxes :users, :id, @members, :id, :email %>
    </div>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-default">Submit</button>
    <%= link_to "Cancel", "/meetings", class: "btn btn-default" %>
  </div>
<% end %>
</div>
